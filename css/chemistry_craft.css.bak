/* Chemistry Crafting System Styles */
.lab-interface {
    display: grid;
    grid-template-columns: 250px 1fr 250px;
    gap: 20px;
    padding: 20px;
    height: calc(100vh - 100px);
}

.elements-panel, .discoveries-panel {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 10px;
    padding: 15px;
    overflow-y: auto;
    min-height: 200px;
    display: flex;
    flex-direction: column;
}

.elements-panel h3, .discoveries-panel h3 {
    margin: 0 0 15px 0;
    color: #fff;
    font-size: 1.2em;
}

.search-bar {
    margin-bottom: 15px;
    width: 100%;
}

.search-bar input {
    width: 100%;
    padding: 8px 12px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 5px;
    background: rgba(255, 255, 255, 0.15);
    color: #fff;
    font-size: 14px;
}

.search-bar input::placeholder {
    color: rgba(255, 255, 255, 0.5);
}

.search-bar input:focus {
    outline: none;
    background: rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.3);
}

.element-grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 12px;
    padding: 15px;
    background: rgba(0, 0, 0, 0.2);
    border-radius: 8px;
    flex-grow: 1;
    align-content: start;
    overflow-y: auto;
    overflow-x: hidden;
    max-height: calc(100vh - 250px);
    width: 100%;
    box-sizing: border-box;
}

.element {
    background: rgba(255, 255, 255, 0.15);
    border-radius: 8px;
    padding: 12px 8px;
    cursor: move;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 80px;
    user-select: none;
    cursor: grab;
    transition: transform 0.2s, background 0.2s;
}

.element-symbol {
    font-size: 1.4em;
    font-weight: bold;
    margin-bottom: 4px;
}

.element-name {
    font-size: 0.85em;
    opacity: 0.9;
}

.element:hover {
    transform: scale(1.05);
    background: rgba(255, 255, 255, 0.25);
}

.element[draggable="true"]:active {
    cursor: grabbing;
}

.crafting-area {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 20px;
}

.crafting-slots {
    display: flex;
    align-items: center;
    gap: 20px;
}

.crafting-slot, .result-slot {
    width: 120px;
    height: 120px;
    background: rgba(255, 255, 255, 0.1);
    border: 2px dashed rgba(255, 255, 255, 0.3);
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.3s;
}

.crafting-slot.drag-over {
    background: rgba(255, 255, 255, 0.2);
    border-style: solid;
}

.slot-label {
    color: rgba(255, 255, 255, 0.5);
    text-align: center;
    font-size: 0.9em;
    padding: 10px;
}

.plus-sign {
    font-size: 24px;
    color: var(--text-color);
}

.combine-btn {
    padding: 10px 20px;
    background: var(--accent-color);
    color: var(--text-color);
    border: 1px solid black;
    border-radius: 5px;
    cursor: pointer;
    transition: opacity 0.3s;
}

.combine-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

.result-area {
    text-align: center;
}

.discoveries-list {
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.discovery-item {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 5px;
    padding: 8px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

@media (max-width: 1024px) {
    .lab-interface {
        grid-template-columns: 1fr;
        grid-template-rows: auto 1fr auto;
        height: auto;
    }

    .elements-panel {
        order: 2;
    }

    .crafting-area {
        order: 1;
        padding: 20px 0;
    }

    .discoveries-panel {
        order: 3;
    }

    .element-grid {
        grid-template-columns: repeat(4, 1fr);
    }
}